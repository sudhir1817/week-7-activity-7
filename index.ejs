<!-- Define a function to render each Message -->
<% function renderMessage(Message) { %>
    <li>
        <strong>Sender:</strong> <%= Message.sender %><br>
        <strong>Recipient:</strong> <%= Message.recipient %><br>
        <strong>Content Date:</strong> <%= Message.content %><br>
    </li>
<% } %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Messages</title>
    <link rel="stylesheet" href="/styles.css"> <!-- Link to external stylesheet -->
</head>
<body>
    <h1>Messages List</h1>
    <ul>
        <% if (Messages.length > 0) { %>
            <!-- Call the renderMessage function for each Message -->
            <% Messages.forEach(renderMessage); %>
        <% } else { %>
            <li>No Messages found.</li>
        <% } %>
    </ul>
</body>
</html>